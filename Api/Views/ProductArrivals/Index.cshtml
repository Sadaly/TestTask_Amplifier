@model IEnumerable<Api.Models.ProductArrival>

@{
    ViewData["Title"] = "Операции прихода";
}

<h1>Операции прихода</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить новую операцию прихода</a>
</p>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-filter"></i> Фильтр по периоду
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="startDate" class="form-label">Начальная дата</label>
                <input type="date" class="form-control" id="startDate" name="startDate"
                       value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-4">
                <label for="endDate" class="form-label">Конечная дата</label>
                <input type="date" class="form-control" id="endDate" name="endDate"
                       value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Применить</button>
                <a asp-action="Index" class="btn btn-secondary">Сбросить</a>
            </div>
        </form>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.Product.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Amount)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToString("dd.MM.yyyy")</td>
                <td>@Html.DisplayFor(modelItem => item.Product.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Изменить</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детали</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Установка сегодняшней даты как максимума для полей ввода даты
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('endDate').setAttribute('max', today);
            document.getElementById('startDate').setAttribute('max', today);

            // Установка даты по умолчанию для endDate (сегодня)
            if (!document.getElementById('endDate').value) {
                document.getElementById('endDate').value = today;
            }

            // Установка даты по умолчанию для startDate (месяц назад)
            if (!document.getElementById('startDate').value) {
                const monthAgo = new Date();
                monthAgo.setMonth(monthAgo.getMonth() - 1);
                document.getElementById('startDate').value = monthAgo.toISOString().split('T')[0];
            }
        });
    </script>
}