@{
    ViewData["Title"] = "Детали остатка товара";
}

<h1>Детали остатка товара</h1>

<div class="card mb-3">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">@ViewBag.ProductTitle</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h4>Текущий остаток: <span class="badge bg-@(ViewBag.CurrentStock > 0 ? "success" : (ViewBag.CurrentStock == 0 ? "secondary" : "danger"))">@ViewBag.CurrentStock</span></h4>
            </div>
            <div class="col-md-6 text-end">
                <a asp-controller="Products" asp-action="Edit" asp-route-id="@ViewBag.ProductId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Редактировать товар
                </a>
            </div>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-filter"></i> Фильтр по периоду
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <input type="hidden" name="id" value="@ViewBag.ProductId" />
            <div class="col-md-4">
                <label for="startDate" class="form-label">Начальная дата</label>
                <input type="date" class="form-control" id="startDate" name="startDate"
                       value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-4">
                <label for="endDate" class="form-label">Конечная дата</label>
                <input type="date" class="form-control" id="endDate" name="endDate"
                       value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Применить</button>
                <a asp-action="Details" asp-route-id="@ViewBag.ProductId" class="btn btn-secondary">Сбросить</a>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-success text-white">
                <i class="fas fa-arrow-alt-circle-down"></i> Операции прихода
            </div>
            <div class="card-body">
                @if (ViewBag.Arrivals != null && ((IEnumerable<Api.Models.ProductArrival>)ViewBag.Arrivals).Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Дата</th>
                                    <th>Количество</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var arrival in (IEnumerable<Api.Models.ProductArrival>)ViewBag.Arrivals)
                                {
                                    <tr>
                                        <td>@arrival.Date.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@arrival.Amount</td>
                                        <td>
                                            <a asp-controller="ProductArrivals" asp-action="Edit" asp-route-id="@arrival.Id" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit">Edit</i>
                                            </a>
                                            <a asp-controller="ProductArrivals" asp-action="Delete" asp-route-id="@arrival.Id" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash">Delete</i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center text-muted">Нет операций прихода за выбранный период</p>
                }
                <div class="mt-2">
                    <a asp-controller="ProductArrivals" asp-action="Create"
                       asp-route-productId="@ViewBag.ProductId"
                       class="btn btn-success">
                        <i class="fas fa-plus"></i> Добавить приход
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-danger text-white">
                <i class="fas fa-arrow-alt-circle-up"></i> Операции расхода
            </div>
            <div class="card-body">
                @if (ViewBag.Expenses != null && ((IEnumerable<Api.Models.ProductExpense>)ViewBag.Expenses).Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Дата</th>
                                    <th>Количество</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var expense in (IEnumerable<Api.Models.ProductExpense>)ViewBag.Expenses)
                                {
                                    <tr>
                                        <td>@expense.Date.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@expense.Amount</td>
                                        <td>
                                            <a asp-controller="ProductExpenses" asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit">Edit</i>
                                            </a>
                                            <a asp-controller="ProductExpenses" asp-action="Delete" asp-route-id="@expense.Id" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash">Delete</i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center text-muted">Нет операций расхода за выбранный период</p>
                }
                <div class="mt-2">
                    <a asp-controller="ProductExpenses" asp-action="Create"
                       asp-route-productId="@ViewBag.ProductId"
                       class="btn btn-danger">
                        <i class="fas fa-plus"></i> Добавить расход
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Назад к списку товаров
    </a>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('endDate').setAttribute('max', today);
            document.getElementById('startDate').setAttribute('max', today);

            if (!document.getElementById('endDate').value) {
                document.getElementById('endDate').value = today;
            }

            if (!document.getElementById('startDate').value) {
                const monthAgo = new Date();
                monthAgo.setMonth(monthAgo.getMonth() - 1);
                document.getElementById('startDate').value = monthAgo.toISOString().split('T')[0];
            }
        });
    </script>
}