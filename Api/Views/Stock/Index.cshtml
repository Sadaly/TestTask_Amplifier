@model IEnumerable<Api.Models.ViewModels.StockViewModel>

@{
    ViewData["Title"] = "Остатки товаров";
}

<h1>Остатки товаров на складе</h1>

<p>
    <a asp-controller="Products" asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Добавить новый товар
    </a>
</p>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-search"></i> Поиск и сортировка
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label for="searchString" class="form-label">Поиск по наименованию</label>
                <input type="text" class="form-control" id="searchString" name="searchString"
                       value="@ViewData["CurrentFilter"]" placeholder="Введите часть названия...">
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i> Найти
                </button>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <a asp-action="Index" class="btn btn-secondary w-100">
                    <i class="fas fa-times"></i> Очистить
                </a>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.ActionLink("Наименование", "Index", new { sortOrder = ViewBag.TitleSortParm, searchString = ViewData["CurrentFilter"] })
                </th>
                <th>
                    @Html.ActionLink("Текущий остаток", "Index", new { sortOrder = ViewBag.StockSortParm, searchString = ViewData["CurrentFilter"] })
                </th>
                <th>Последний приход</th>
                <th>Последний расход</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center">Нет данных для отображения</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr class="@(item.CurrentStock <= 0 ? "table-danger" : (item.CurrentStock <= 5 ? "table-warning" : ""))">
                        <td>@Html.DisplayFor(modelItem => item.Product.Title)</td>
                        <td>
                            <span class="badge @(item.CurrentStock <= 0 ? "bg-danger" : (item.CurrentStock <= 5 ? "bg-warning text-dark" : "bg-success"))">
                                @item.CurrentStock
                            </span>
                        </td>
                        <td>@(item.LastArrival.HasValue? item.LastArrival.Value.ToString("dd.MM.yyyy") : "Нет данных")</td>
                        <td>@(item.LastExpense.HasValue? item.LastExpense.Value.ToString("dd.MM.yyyy") : "Нет данных")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Product.Id" class="btn btn-sm btn-info">
                                <i class="fas fa-info-circle"></i> Детали
                            </a>
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Product.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Редактировать
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="mt-3">
    <a asp-controller="ProductArrivals" asp-action="Create" class="btn btn-primary me-2">
        <i class="fas fa-arrow-alt-circle-down"></i> Добавить приход
    </a>
    <a asp-controller="ProductExpenses" asp-action="Create" class="btn btn-danger">
        <i class="fas fa-arrow-alt-circle-up"></i> Добавить расход
    </a>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('tbody tr');
            rows.forEach(row => {
                const stockCell = row.cells[1];
                if (stockCell) {
                    const stockValue = parseInt(stockCell.textContent.trim());
                    if (stockValue <= 0) {
                        row.classList.add('table-danger');
                    } else if (stockValue <= 5) {
                        row.classList.add('table-warning');
                    }
                }
            });
        });
    </script>
}